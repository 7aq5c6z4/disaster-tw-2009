<div class="container">
  <div class="bd">
    <h1>Edit Post</h1>
    <%= error_messages_for :post %>
    
    <% form_for :post , :url => help_path(@post) , :html => {:method => :put} do |f| -%>
    <div class="edit-content">
        <div class="field">
          <label>
            標題
          </label>
          <%= f.text_field :subject %>
        </div>
        <div class="field">
          <label>
            內容
          </label>
          
          <%= f.text_area :content %>
        </div>
        <div class="field"><label>Tags</label> <%= f.text_field :tag_list %></div>
        
        <button type="submit" class="submit">submit</button>
    </div>
    <% end %>
  </div>
</div>
