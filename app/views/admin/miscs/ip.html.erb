<div class="block" id="block-forms">
  <div class="secondary-navigation">
	<%= render :partial => "admin/navbar"%>
    <div class="clear"></div>
  </div>
  <div class="content">
    <h2 class="title">
      IP 阻擋列表
    </h2>
    <div class="inner">
	  <%= error_messages_for :misc %>	
      <% form_for @misc , :url => admin_misc_path(@misc), :html => {  :class => "form" } do |f| -%>

		<div class="group">
          <label class="label">輸入IP，請以 , 分隔。只能阻擋單個 ip, 目前沒有 range 功能</label>
          <%= f.text_area :content %>

        <div class="group navform">
          <input type="submit" class="button" value="Save &rarr;" /> or <a href="#header">Cancel</a>
        </div>
      <% end %>

      <br class="clear" />

    </div>
  </div>
</div>
    
